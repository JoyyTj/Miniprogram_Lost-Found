page {
  background-color: rgba(20, 120, 255, 0.12);
}
.input_container {
  height: 50rpx;
  width: 600rpx;
  margin: 20rpx auto;
  padding: 20rpx;
  color: black;
  background-color: whitesmoke;
  border-radius: 20rpx;
}
.input_container input {
  height: 20rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.image_container {
  height: 400rpx;
  width: 600rpx;
  margin: 20rpx auto;
  padding: 20rpx;
  color: black;
  background-color: whitesmoke;
  border-radius: 20rpx;
}
.image_container image {
  height: 400rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}
.addimg {
  width: 200rpx;
  height: 50rpx;
  border: 1px solid #999999;
  margin: 0rpx auto;
  text-align: center;
  flex-shrink: 0;
  -webkit-flex-shrink: 0;
  border-radius: 20rpx;
}
.upload_btn {
  width: 200rpx;
  height: 100rpx;
  margin: 20rpx auto;
  text-align: center;
  border-radius: 20rpx;
}
.upload_btn .upload {
  padding-top: 20rpx;
  background-color: rgb(20, 120, 255);
  color: white;
  width: 100%;
  height: 100%;
  text-align: center;
  text-size-adjust: 50rpx;
  border-radius: 20rpx;
}
.upload_btn .hover {
  padding-top: 20rpx;
  color: rgb(20, 120, 255);
  background-color: white;
  width: 100%;
  height: 100%;
  text-align: center;
  text-size-adjust: 50rpx;
  border-radius: 20rpx;
}
.tip {
  color: grey;
}
.introduce {
  font-size: 30rpx;
  text-align: center;
}
