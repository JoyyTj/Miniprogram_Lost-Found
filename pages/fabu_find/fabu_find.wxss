/* pages/fabu_lost/fabu_lost.wxss */
.goods-type{
	background-color: white;
	margin-top:30rpx;
	margin-bottom:10rpx;
	height:60rpx;
	display:flex;
	flex-direction:row;
	align-items:center;
	padding-left:20rpx;
	color:rgba(20,120,255,0.7);
	justify-content:space-between;
}
.error_msg{
	color: red;
	font-size: 25rpx;
	margin-left: 30rpx;
}
.goods-type .iconfont{
	font-size: 40rpx;
	margin-right: 20rpx;
}

.pictures{
	display: flex;
	flex-direction: row;
	flex-wrap:wrap;
}

.choose{
	background-color: white;
	margin-top:20rpx;
	margin-bottom:20rpx;
	height:40rpx;
	display:flex;
	flex-direction:row;
	align-items:center;
	padding-left:25rpx;
	color:black;
	justify-content:space-between;
}

.choose .iconfont{
	color: rgba(20,120,255,0.7);
	font-size: 35rpx;
	margin-right: 50rpx;
}

.title{
	border-bottom: solid 2rpx #eee;
}
.title input{
	font-size:30rpx;
}

.description textarea{
	height: 240rpx !important;
}

.van-icon-plus{
	position: absolute !important;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}
.upload-img{
	font-size: 100rpx;
	color: gray;
	position: relative;
}
.pictures{
	display: flex;
	flex-direction: row;
	flex-wrap:wrap;
}
.img_item{
	position: relative;
	background-color: #eee;
	width: 150rpx;
	height: 150rpx;
	border-radius: 8rpx;
	margin-left: 30rpx;
	margin-top: 30rpx;
}
.img_item .van-icon-close{
	position: absolute;
	top:-10rpx;
	right:-10rpx;
	color:red;
}
.img_item image{
	width: 150rpx;
	height: 150rpx;
	border-radius: 8rpx;
}
.new_tag{
	margin-left: 20rpx;
	margin-top: 20rpx;
}
.new_tag .van-checkbox__label{
	font-size: 28rpx;
	color: gray;
}

.publish_btn{
	width: 80%;
	background-color: rgba(20,120,255,0.7);
	border: none;
	color: white;
	margin-top: 40rpx;
	margin-bottom: 80rpx;
}
.found_time{
	background-color: white;
	height: 50rpx;
}
.lost-found-time{
	background-color:white;
	display:block;
	border-bottom:solid 1rpx #eee;
	line-height:48rpx;
	padding:20rpx 30rpx;
	font-size:28rpx;
	box-sizing:border-box;
}
.lost-found-time .holder, .lost-found-time .time{
	margin-left: 3rpx;
}
.lost-found-time .holder{
	color: #9a9a9a;
}