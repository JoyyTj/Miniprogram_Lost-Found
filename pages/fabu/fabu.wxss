/* pages/fabu/fabu.wxss */
.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.old {
  margin-top: 180rpx;
  position: relative;
  width: 90%;
  height: 250rpx;
  border-radius: 20rpx;
}

.old .iconfont {
  color: white;
  position: absolute;
  left: 32%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  font-size: 100rpx;
  margin-right: 130rpx;
}

.old image {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 12rpx;
}
.old text {
  color: white;
  position: absolute;
  left: 57%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
}
.s_mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(20,120,255,0.7);
  z-index: 1;
  border-radius: 12rpx;
}
